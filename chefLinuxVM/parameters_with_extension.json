{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "value": "northeurope"
        },
        "networkSecurityGroupName": {
            "value": "linux-chef-nsg"
        },
        "networkSecurityGroupRules": {
            "value": [
                {
                    "name": "SSH",
                    "properties": {
                        "priority": 300,
                        "protocol": "TCP",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourceAddressPrefix": "*",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*",
                        "destinationPortRange": "22"
                    }
                }
            ]
        },
        "subnetName": {
            "value": "default"
        },
        "virtualNetworkName": {
            "value": "chef-vnet"
        },
        "publicIpAddressType": {
            "value": "Dynamic"
        },
        "publicIpAddressSku": {
            "value": "Basic"
        },
        "osDiskType": {
            "value": "StandardSSD_LRS"
        },
        "virtualMachineSize": {
            "value": "Standard_D2_v3"
        },
        "adminUsername": {
            "value": "chef"
        },
        "client_rb": {
            "value": "chef_license 'accept'\n"
        },
        "bootstrap_version": {
            "value": "14"
        },
        "ssl_verify_mode": {
            "value": "peer"
        },
        "policy_name": {
            "value": "base"
        },
        "policy_group": {
            "value": "testing"
        }
    }
}
